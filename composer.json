{
  "name": "akeeba/buildtools",
  "description": "Build utilities for Akeeba software",
  "license": "GPL-3.0-or-later",
  "minimum-stability": "beta",
  "require": {
    "php": "^7.4|^8.0",
    "akeeba/s3": "dev-development",
    "composer/ca-bundle": "^1.2",
    "corneltek/getoptionkit": "^2.6.0",
    "czproject/git-php": "^4.0.3",
    "knplabs/github-api": "^3.0",
    "nyholm/psr7": "^1.0",
    "php-http/guzzle6-adapter": "^2.0",
    "rector/rector": "^0.10"
  },
  "suggest": {
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-ssh2": "*",
    "ext-xsl": "*",
    "ext-zip": "*",
    "ext-zlib": "*"
  },
  "config": {
    "platform" : {
      "php": "8.1.999"
    },
    "allow-plugins": {
      "rector/extension-installer": true,
      "php-http/discovery": true
    }
  }
}
